<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dimen2"
    android:layout_marginTop="@dimen/margin5"
    android:layout_marginBottom="@dimen/margin5"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_follower_profile"
            android:layout_width="@dimen/follower_item_img_width"
            android:layout_height="@dimen/follower_item_img_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin15" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/padding15">

            <TextView
                android:id="@+id/txt_follower_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1" />

            <TextView
                android:id="@+id/txt_follower_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1" />

            <TextView
                android:id="@+id/txt_follower_bio"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>